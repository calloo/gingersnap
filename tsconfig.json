{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "preserveConstEnums": true,
    "sourceMap": false,
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "outDir": "lib",
    "lib": [
      "dom",
      "es2021.intl",
      "es2015",
      "es2018.asyncgenerator"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
